<button class= "nav-button"> <%= link_to 'Back to Restaurant list', restaurants_path %> </button>

<h4><%= @restaurant.name %></h4>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>

<div class="review-box">
  <h5> Reviews for <%= @restaurant.name %> </h5>

  <% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p>Rating : <%= review.rating %></p>
  <% end %>
</div>

<button><%= link_to 'Add another review', new_restaurant_review_path(@restaurant) %> </button>

